PARAM mvpmat[4] = {{ param4_mvpmat }};

# Transform the vertex position into display coordinates
DP4 result.position.x, mvpmat[0], {{ attr_vertex }};
DP4 result.position.y, mvpmat[1], {{ attr_vertex }};
DP4 result.position.z, mvpmat[2], {{ attr_vertex }};
DP4 result.position.w, mvpmat[3], {{ attr_vertex }};
END
